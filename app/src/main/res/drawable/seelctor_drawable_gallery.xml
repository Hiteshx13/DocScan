    <item android:width="20dp" android:height="20dp" android:state_pressed="true">
        <bitmap android:width="20dp" android:height="20dp" android:src="@drawable/ic_gallery"  android:tint="@color/colorAccent" />
    </item>
    <item android:width="20dp" android:height="20dp" android:state_selected="true">
        <bitmap android:width="20dp" android:height="20dp" android:src="@drawable/ic_gallery" android:tint="@color/colorAccent" />
    </item>
    <item android:width="20dp" android:height="20dp" android:state_focused="true">
        <bitmap android:width="20dp" android:height="20dp" android:src="@drawable/ic_gallery" android:tint="@color/colorAccent" />
    </item>
    <item android:width="20dp" android:height="20dp" android:drawable="@drawable/ic_gallery" android:tint="@color/white" />
</selector>